<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.uniwic.mediahub"
    style="?pageBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/PurpleLight"
        android:textColor="@android:color/darker_gray"
        app:footerColor="#FFA500"
        app:footerIndicatorHeight="4dp"
        app:footerIndicatorStyle="underline"
        app:footerLineHeight="0dp"
        app:footerPadding="10dp"
        app:selectedColor="#FFA500"
        app:titlePadding="10dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>